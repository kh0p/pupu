.form-wrapper
  .text-center
    =image_tag @post.image.url(:medium)
  %br
  = simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.input :image
    .form-group.text-center
      = f.input :caption
    .form-group.text-center
      = f.button :submit, class: 'btn-success'
  %ul.list-inline.actions.text-center
    %li
      = link_to "", posts_path, class: "icon-cross"
    %li
      = link_to "", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "icon-minus"
